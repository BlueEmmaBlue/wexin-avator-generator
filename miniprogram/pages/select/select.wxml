<page-meta>
  <navigation-bar title="漆个龙咚呛" back="{{false}}" color="black" background="#FFF"></navigation-bar>
</page-meta>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="canvass">
    <canvas canvas-id="avatarCanvas" id="avatarCanvas" type="2d" style="width: 128px; height: 128px;"></canvas>
  </view>
  <view class="select">
